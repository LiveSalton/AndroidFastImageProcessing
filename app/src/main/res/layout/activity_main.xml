<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvAllFiltersExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AllFiltersExample" />

    <TextView
        android:id="@+id/tvGenericFilterExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="GenericFilterExample" />

    <TextView
        android:id="@+id/tvTwoInputFilterExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TwoInputFilterExample" />

    <TextView
        android:id="@+id/tvVideoToImageExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="VideoToImageExample" />

</LinearLayout>